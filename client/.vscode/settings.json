{
   "explorer.fileNesting.enabled": true,
   "explorer.fileNesting.patterns": {
      "tsconfig.json": "tsconfig.*.json, env.d.ts",
      "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
      "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig"
   },
   "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
   },
   // PEACOCK COLORS
   "workbench.colorCustomizations": {
      "folderPathColor.custom1": "#ffcc55",
      "folderPathColor.custom2": "#42b883",
      "folderPathColor.custom3": "#4488FF",
      "commandCenter.border": "#15202b99",
      "sash.hoverBorder": "#65c89b",
      "titleBar.activeBackground": "#42b883",
      "titleBar.activeForeground": "#15202b",
      "titleBar.inactiveBackground": "#42b88399",
      "titleBar.inactiveForeground": "#15202b99"
   },
   "peacock.color": "#42b883",
   // *** FORMAT SETTINGS ***
   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "editor.formatOnType": false,
   "editor.formatOnPaste": true,
   "editor.formatOnSave": true,
   "editor.formatOnSaveMode": "file",
   "prettier.tabWidth": 3,
   "prettier.printWidth": 100,
   "prettier.singleQuote": true,
   // *** VSCODE ENVIRONNEMENT SETTINGS ***
   "editor.fontFamily": "'JetBrains Mono'",
   "editor.fontLigatures": true,
   "editor.lineHeight": 1.5,
   "workbench.tree.indent": 10,
   "explorer.compactFolders": true,
   "git.decorations.enabled": false,
   // " *** MATERIAL ICONS ***
   "workbench.iconTheme": "material-icon-theme",
   "material-icon-theme.folders.associations": {
      "browse-games": "vue",
      "main": "vue",
      "illustrations": "images",
      "illustration": "images",
      "unused": "vue",
      "composable": "functions",
      "ui": "vue",
      "landing-page": "vue",
      "forms": "vue",
      "home": "vue"
   },
   // *** Tailwind Fold settings ***
   "tailwind-fold.autoFold": true,
   "tailwind-fold.foldStyle": "ALL",
   "tailwind-fold.unfoldedTextOpacity": 0.9,
   "tailwind-fold.foldLengthThreshold": 50
}
